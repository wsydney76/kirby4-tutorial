{# Opting out of Tailwinds prose styling and doing our own thing.  #}

{# @param block Block #}

{% set style = block.style ?? 'default' %}

<div class="my-8 not-prose">
    {% if style == 'bordersTopBottom' %}

        <blockquote class="lg:-mx-24 border-t-2 border-b-2 border-prose py-6 text-prose text-center">
            <div class="text-2xl uppercase">
                {# Use static translations for language-specific quotation marks #}
                {# There is a <q> element, but that is not intended for use inside a <blockquote> #}
                {{ '“'|t }}{{ block.text|nl2br }}{{ '”'|t }}
            </div>
            {% if block.cite %}
                <cite class="block mt-8 text-lg italic">
                    {{ block.cite }}
                </cite>
            {% endif %}
        </blockquote>

    {% else %}
        <blockquote class="border-l-4 border-gray-400 px-8 py-2">
            <div class="font-semibold font-serif text-lg  text-gray-600">
                {{ '“'|t }}{{ block.text|nl2br }}{{ '”'|t }}
            </div>
            {% if block.cite %}
                <cite class="block mt-4 text-lg text-prose italic">
                    {{ block.cite }}
                </cite>
            {% endif %}
        </blockquote>
    {% endif %}

</div>



